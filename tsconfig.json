{
    "compilerOptions": {
        "rootDir": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@@/*": ["./*"],
            "@/testing": ["./src/testing/*"],
        },
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["vite/client", "node"],
        "declaration": true,
        "declarationDir": "dist",
        "listEmittedFiles": true
    },
    "include": ["src", "dist/index.d.ts", "dist/mgine.d.ts", "dist/testing/index.d.ts"],
    "exclude": ["**/*.test.ts", "node_modules", "test/**", ".history/**", "dist/**"]
}
